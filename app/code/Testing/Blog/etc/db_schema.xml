<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="blog" resource="default" engine="innodb" comment="testing blog the table name">
      <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Id"/>
      <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title" />
      <column xsi:type="varchar" name="short_description" onCreate="migrateDataFrom(content)" nullable="false" length="255" comment="Descrition" />
      <column xsi:type="smallint" name="status" comment="Status" />
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>